<Window x:Class="DemoAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoAPI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="FullName"></TextBlock>
        <TextBox x:Name="txtname"></TextBox>

        <TextBlock Text="Email"></TextBlock>
        <TextBox x:Name="txtemail"></TextBox>

        <TextBlock Text="Password"></TextBlock>
        <TextBox x:Name="txtpassword"></TextBox>

        <TextBlock Text="Role"></TextBlock>
        <TextBox x:Name="txtrole"></TextBox>

        <Button x:Name="Btnsave" Click="Btnsave_Click">SAVE</Button>
    </StackPanel>
</Window>
